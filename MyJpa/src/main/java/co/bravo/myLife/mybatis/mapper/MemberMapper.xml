<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.bravo.myLife.mybatis.mapper.MemberMapper">
	<select id="memberSelectList" resultType="co.bravo.myLife.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>
	
	<select id="memberSelect" resultType="co.bravo.myLife.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</select>
	
	<insert id="memberInsert" parameterType="co.bravo.myLife.member.service.MemberVO">
		INSERT INTO MEMBER
		VALUES (#{memberId}, #{memberPassword}, #{memberName}, #{memberTel}, #{memberAuthor})
	</insert>
	
	<update id="memberUpdate" parameterType="co.bravo.myLife.member.service.MemberVO">
		UPDATE MEMBER
		SET MEMBER_PASSWORD = #{memberPassword},
			MEMBER_NAME = #{memberName}, 
			MEMBER_TEL = #{memberTel},
			MEMBER_AUTHOR = #{memberAuthor}
		WHERE MEMBER_ID = #{memberId}
	</update>
	
	<delete id="memberDelete" parameterType="co.bravo.myLife.member.service.MemberVO">
		DELETE MEMBER
		WHERE MEMBER_ID = #{memberId}
	</delete>
	
	<select id="isIdCheck" resultType="boolean">
		SELECT CASE WHEN COUNT(MEMBER_ID) > 0 THEN 0 ELSE 1 END AS ID
		FROM MEMBER
		WHERE MEMBER_ID = #{id}
	</select>
</mapper>